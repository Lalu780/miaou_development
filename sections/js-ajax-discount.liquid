<script type="application/json">
    [
      {%- for item in cart.items -%} 
        {
          "handle": {{ item.product.handle | json }},
          "title": {{ item.product.title | json }},
          "tags": {{ item.product.tags | json }},
          "price": {{ item.product.price | json }},
          "compare_at_price": {{ item.product.compare_at_price | json }}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ]

  </script>
      
  {% schema %}
    {
      "name": "AJAX Cart discount",
      "class": "js-ajax-cart-discount"
    }
  {% endschema %}