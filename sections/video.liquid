<div class="video-main-section">
  <div
    class="VideoSection"
    id="video-section-desk"
  >
    {% if section.settings.video != blank %}
      <iframe
        src="{{ section.settings.video | escape }}?background=1&amp;autoplay=1&amp;loop=1&amp;title=0&amp;byline=0&amp;portrait=0"
        width="640"
        height="320"
        frameborder="0"
        allow="autoplay; fullscreen"
        allowfullscreen=""
        class="fluidvids-item"
        id="fluidvids-item-desk"
        data-fluidvids="loaded"
      ></iframe>
    {% endif %}
  </div>
  <div class="VideoSection_mob">
    {% if section.settings.video_mob != blank %}
      <iframe
        id="mob"
        src="{{ section.settings.video_mob | escape }}?background=1&amp;autoplay=1&amp;loop=1&amp;title=0&amp;byline=0&amp;portrait=1&amp;controls=0"
        width="100%"
        height="100vh"
        frameborder="0"
        allow="autoplay; fullscreen"
        allowfullscreen=""
        class="fluidvids-item"
        data-fluidvids="loaded"
      ></iframe>
    {% endif %}
  </div>
  <div class="video-section-content">
    {% if section.settings.video_heading != blank %}
      <h1 class="HPHero-title">{{ section.settings.video_heading }}</h1>
    {% endif %}
    {% if section.settings.video_cta != blank and section.settings.video_cta_id != blank %}
      <a class="HPHero-cta" href="{{section.settings.video_cta_id}}" target="_blank">
        {{- section.settings.video_cta -}}
      </a>
    {% endif %}
  </div>
</div>
