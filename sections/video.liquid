{% schema %}
{
    "name": "Video",
    "class": "VideoSection",
    "settings": [
        {
            "type": "text",
            "id":"video_heading",
            "label": "Video Heading"
            },
            {
            "type": "text",
            "id": "video_cta",
            "label": "Video CTA"
            },
            {
            "type": "url",
            "id": "video_cta_id",
            "label": "Video CTA Link"
            },
            {
                "type": "video_url",
                "id": "video",
                "label": "Video",
                "accept": [
                    "vimeo"
                ]
            },
      {
            "type": "video_url",
            "id": "video_mob",
            "label": "Video mobile",
            "accept": [
                "vimeo"
            ]
        }
    ],
    "presets": [{
        "name": "Video",
        "category": "Video"
    }]
}
{% endschema %}
