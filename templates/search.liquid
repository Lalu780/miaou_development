
{% paginate search.results by 12 %}
<main class="Search" role="main">
  <div class="column row">

      <header class="Search-header">

        {% if search.performed %}
          <h3 class="Search-title">
            {% if search.results_count == 0 %}
              {{ 'general.search.no_results_html' | t: terms: search.terms }}
            {% else %}
              {{ 'general.search.results_for_html' | t: terms: search.terms }}
            {% endif %}
          </h3>
        {% else %}
          <h1 class="Search-title">
            {{ 'general.search.title' | t }}
          </h1>
        {% endif %}

        <form class="Search-form" action="/search">
          {% comment %}<input type="hidden" name="type" value="product">{% endcomment %}
          <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" class="Search-field" aria-label="{{ 'general.search.placeholder' | t }}" x-webkit-speech /><!-- input-block fix
       --><input type="submit" class="Search-submitButton o-button" value="{{ 'general.search.submit' | t }}" />
        </form>

      </header>

      {% if search.performed %}
        <div class="SearchResults">
          {% render 'search-results' %}
        </div>
      {% endif %}

  </div>
</main>
{% endpaginate %}
